@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Kategori Güncelleme Sayfası</h1>
<form method="post">
    @Html.Label("Kategori ID")
    @Html.TextBoxFor(x=>x.Id, new{@class="form-control"})
    <br />
    @Html.Label("Kategori İsmi")
    @Html.TextBoxFor(x=>x.CategoryName,new {@class="form-control"})
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>

